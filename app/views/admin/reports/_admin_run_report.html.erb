
	<div style="text-align: center;">
    <hr/>
    <h3>Ready to run this report?</h3>
  
  	<%= form_for([:admin, @report]) do |f| %>
			<%= f.hidden_field :test_environment_id, value: @report.test_suite.test_environments.first.id if @report.test_suite.test_environments.count == 1 %>
      <%= f.hidden_field :status, value: 'Running' %>
      <%= f.hidden_field :started_at, value: DateTime.now %>
      <%= f.hidden_field :monitored_by, value: current_user.id %>
      <%= f.submit 'Run This Report', class: 'btn btn-lg btn-success', confirm: 'Are you sure? This will notify the client.' %>
	  <% end %>
	</div>
	