
<hr/>

<h3>Last 5 Reports</h3>
<table class="table table-bordered table-striped">
  <tr>
    <th>ID</th>
    <th>Status</th>
    <th>Initiated At</th>
    <th>Started At</th>
    <th>Completed At</th>
    <th></th>
  </tr>
  <% @reports.each do |report| %>
    <tr>
      <td><%= report.id %></td>
      <td><%= report.status %></td>
      <td><%= report.initiated_at %></td>
      <td><%= report.started_at %></td>
      <td><%= report.completed_at %></td>
      <td><%= link_to "View Report", report_path(report) %></td>
    </tr>
  <% end %>
</table>
<%= link_to "View All Your Reports", reports_path, class: 'btn btn-primary pull-right' %>
