<div class="row">
  <h1>To Do Items</h1>
</div>

<div class="row">
  <h3>Pending Test Cases</h3>
  <p>Test cases to setup.</p>
</div>

<table class="table table-bordered table-striped">
  <tr>
    <th>Name</th>
    <th>Status</th>
    <th></th>
  </tr>
  <% @test_cases.each do |test_case| %>
    <tr>
      <td><%= test_case.title %></td>
      <td><%= test_case.status %></td>
      <td><%= link_to 'View Test Case', test_case_path(test_case) %></td>
    </tr>
  <% end %>
</table>

<div class="row">
  <h3>Pending Reports</h3>
  <p>Reports ready to run</p>
</div>

<table class="table table-bordered table-striped">
  <tr>
    <th>ID</th>
    <th>Status</th>
    <th>Initiated At</th>
    <th>Started At</th>
    <th>Completed At</th>
    <th></th>
  </tr>
  <% @reports.each do |report| %>
    <tr>
      <td><%= report.id %></td>
      <td><%= report.status %></td>
      <td><%= report.initiated_at %></td>
      <td><%= report.started_at %></td>
      <td><%= report.completed_at %></td>
      <td><%= link_to "Start Report", report_path(report) %></td>
    </tr>
  <% end %>
</table>