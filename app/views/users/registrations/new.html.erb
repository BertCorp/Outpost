<% content_for :title do %>
Sign Up
<% end %>

<div class="row">
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signup' }) do |f| %>
  	<h2 class="form-signin-heading">Registration</h2>
    <%= devise_error_messages! %>
		
		<%= f.text_field :company, class: "form-control", placeholder: 'Company Name', required: true, autofocus: true %>
		<%= f.text_field :name, class: "form-control", placeholder: 'Your Name', required: true %>
		<%= f.email_field :email, class: "form-control", placeholder: 'Email address', required: true %>
    <%= f.password_field :password, class: "form-control", placeholder: 'Password', required: true %>
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: 'Confirm Password', required: true %>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
	<% end %>

<%= render "users/shared/links" %>
</div>
