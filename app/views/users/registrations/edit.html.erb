<% content_for :title do %>
Manage Your Account
<% end %>

<h2>Manage Your Account</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: "form-horizontal form-standard", role: 'form' }) do |f| %>
  <%= devise_error_messages! %>
  
	<div class="form-group">
		<div class="col-sm-12">
			<%= f.label :name, class: 'control-label' %>
			<%= f.text_field :name, class: "form-control" %>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-12">
			<%= f.label :email, class: 'control-label' %>
			<%= f.email_field :email, class: "form-control" %>
		</div>
	</div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  
	<div class="col-sm-12">
		<span class="help-block">Only fill out the following fields if you want to change your password.</span>
	</div>

	<div class="form-group">
		<div class="col-sm-12">
			<%= f.label :password, class: 'control-label' %>
			<%= f.password_field :password, class: "form-control", autocomplete: "off" %>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-12">
			<%= f.label :password_confirmation, class: 'control-label' %>
			<%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
		</div>
	</div>
	
	<div class="form-group">
		<div class="col-sm-12">
			<%= f.label :current_password, class: 'control-label' %>
			<%= f.password_field :current_password, class: "form-control", autocomplete: "off" %>
			<span class="help-block">We need your current password to confirm your changes.</span>
		</div>
	</div>
	  
	<div class="actions col-sm-offset-4">
		<%= f.submit 'Save Account', class: "btn btn-lg btn-primary" %> or <%= link_to "Cancel", dashboard_path, class: "btn btn-sm btn-danger" %>
	</div>
<% end %>

