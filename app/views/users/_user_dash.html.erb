<div class="row">
  <span class="pull-right">
    <button>
      Add A New Test
    </button>
  </span>
  <h3>Your Test </h3>
  <table class="table table-bordered table-striped">
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th></th>
    </tr>
    <% @user.company.test_suite.test_cases.each do |test_cases| %>
      <tr>
        <td><%= test_case.title %></td>
        <td><%= test_case.status %></td>
        <td><%= link_to '(edit)', edit_test_case_path(test_case) %></td>
      </tr>
    <% end %>
  </table>
</div>

<div class="row">
  <span class="pull-right">
    <%= button_to 'Run A Report', new_report_path, method: :get %>
  </span>
  <h3>Reports</h3>
  <table class="table table-bordered table-striped">
    <tr>
      <th>ID</th>
      <th>Status</th>
      <th>Initiated At</th>
      <th>Started At</th>
      <th>Completed At</th>
      <th></th>
    </tr>
    <% @user.company.reports.each do |report| %>
      <tr>
        <td><%= report.id %></td>
        <td><%= report.status %></td>
        <td><%= report.initiated_at %></td>
        <td><%= report.started_at %></td>
        <td><%= report.completed_at %></td>
        <td><%= link_to "View Report", report_path(report) %></td>
      </tr>
    <% end %>
  </table>
</div>
 