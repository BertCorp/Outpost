<%= link_to "< Back to Dashboard", dashboard_path %>

<div class="pull-right">
  <%= render partial: "report_start", locals: { suite: current_user.company.test_suites.first } %>
</div>

<h1>All Reports</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Status</th>
      <th># of Tests</th>
      <th>Initiated</th>
      <th>Started</th>
      <th>Completed</th>
      <th></th>
    </tr>
  </thead>

<%= will_paginate @reports %>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= link_to report.id, report %></td>
        <td><%= report.status %></td>
        <td><%= link_to report.test_cases.count, report %></td>
        <td><%= report.initiated_at %></td>
        <td><%= report.started_at %></td>
        <td><%= report.completed_at %></td>
        <td>
					<%= button_to "View Report", report_path(report), method: :get, class: "btn btn-success" %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @reports %>
