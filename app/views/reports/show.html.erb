<p id="notice"><%= notice %></p>

 <h3>Reported generated for <%= @report.company.name %>.</h3>
 
 <p>
  <%= link_to 'Back', :back %>
    <% if current_user.is_admin? %>
    | <%= link_to 'Edit Report', edit_report_path(@report) %> 
    <% end %>
 </p>

 <p>Test Suite Id: <%= @report.test_suite_id %></p>
 
 <p>Initiated At: <%= @report.initiated_at %></p>
 
 <p>Initiated By: <%= @report.initiated_by %></p>
 
 <p>Started At: <%= @report.started_at %></p>
 
 <p>Completed At: <%= @report.completed_at %></p>
 
 <p>Monitored By: <%= @report.monitored_by %></p>
 
 <p>Current Status: <%= @report.status %></p>
 
 <p>Test Summary: <%= @report.summary %></p>

<table class="table table-bordered table-striped">
  <tr>
    <th>Test Case Id</th>
    <th>Test Case Title</th>
    <th>Test Results ID</th>
  </tr>
 
 <% @results.each do |result| %>
   <tr>
     <td><%= result.id %></td>
     <td><%= result.test_case.title %></td>
     <td><%= result.status %></td>
   </tr>
   <tr>
     <td colspan="3">Summary: 
     <% if result.summary.present? %>
       <%= result.summary %>
     <% else %>
       <i>No notes given.</i>
     <% end%>
     </td>
   </tr>
   <% if current_user.is_admin? %>
   <tr>
     <td colspan="3"><%= link_to "Update Test Result", test_result_path(result) %></td>
   </tr>
   <% end %>
 <% end %>
</table>
