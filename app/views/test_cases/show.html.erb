<p id="notice"><%= notice %></p>

<span><h3>Test Case For <%= @test_case.company.name %></h3></span>

<p><%= link_to 'Back', test_cases_path %> | <%= link_to "View Company", company_path(@test_case.company) %></p>

<p><b>Title:</b> <%= @test_case.title %></p>

<p>Description: <%= @test_case.description %></p>

<p>Status: <%= @test_case.status %></p>

<p>Setup Started At: <%= @test_case.setup_started_at %></p>

<p>Setup Completed At:<%= @test_case.setup_completed_at %></p>

<p>Pending Message: <%= @test_case.pending_message %></p>

<p><%= link_to 'Update Test Case', edit_test_case_path(@test_case) %> </p>

<hr>

<h3>Previous Test Results</h3>

<table class="table table-bordered table-striped">
  <tr>
    <th>ID #</th>
    <th>Status</th>
    <th>Report ID</th>
    <th>Started At</th>
    <th>Ended At</th>
    <th>Summary</th>
    <th></th>
  </tr>
  <% @test_case.results.each do |results| %>
  <tr>
    <td><%= results.id %></td>
    <td><%= results.status %></td>
    <td><%= results.report_id %></td>
    <td><%= results.started_at %></td>
    <td><%= results.ended_at %></td>
    <td><%= results.summary %></td>
    <td><%= link_to "View Original Report", report_path(results.report) %></td>
  </tr>
  <% end %>
</table>
