<h1>Listing test_suites</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Test Suite ID</th>
      <th>Company ID</th>
      <th>Company Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @test_suites.each do |test_suite| %>
      <tr>
        <td><%= test_suite.id %></td>
        <td><%= test_suite.company.id %></td>
        <td><%= test_suite.company.name %></td>
        <td><%= link_to 'Show', test_suite %></td>
        <td><%= link_to 'Edit', edit_test_suite_path(test_suite) %></td>
        <td><%= link_to 'Destroy', test_suite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

